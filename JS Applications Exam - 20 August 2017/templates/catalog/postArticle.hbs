<article class="post">
    <div class="col rank">
        <span>{{number}}</span>
    </div>
    <div class="col thumbnail">
        <a href="{{url}}">
            <img src="{{imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{url}}">
                {{title}}
            </a>
        </div>
        <div class="details">
            <div class="info">
                {{description}}
            </div>
            <div class="controls">
                <ul>
                    <li class="action"><a class="commentsLink" href="#">comments</a></li>
                    <li class="action"><a class="editLink" href="#">edit</a></li>
                    <li class="action"><a class="deleteLink" href="#">delete</a></li>
                </ul>
            </div>
        </div>
    </div>
</article>