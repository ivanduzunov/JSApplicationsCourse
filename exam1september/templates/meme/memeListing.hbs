<div class="meme">
    <a href="#/details/{{_id}}" class="meme-title">{{title}}</a>
    <br>
    <a href="#/details/{{_id}}"><img class="meme-image" src="{{imageUrl}}"></a>
    <div class="info">
        <div id="data-buttons">
            <a href="#/details/{{_id}}" class="custom-button">Check Out</a>
            {{#if isAuthor}}
                <a href="#/edit/{{_id}}" class="custom-button">Edit</a>
                <a href="#/delete/{{_id}}" class="custom-button">Delete</a>
            {{/if}}
            <a href="#/profile/{{creatorId}}" class="creator">Creator: {{creator}}</a>
        </div>
    </div>
    <hr>
</div>